const { Model, DataTypes } = require('sequelize');
const sequelize = require('../config/connection');

class User extends Model {}

User.init(
  {
    id: {
      type: DataTypes.INTEGER,
      allowNull: false,
      primaryKey: true,
      autoIncrement: true,
    },
    username: {
      type: DataTypes.STRING,
      unique: true,
      allowNull: false,
    },
    email: {
      type: DataTypes.STRING,
      allowNull: false,
      unique: true,
      validate: {
        isEmail: true,
      },
    },
    thoughts: {
        _id: [],
references: {
    model: 'thought',
    key: 'id',
  },
    },
    friends: {
        _id: [],
        references: {
            model: 'User',
            key: 'id',
          },
            },
  },

);

module.exports = User;
